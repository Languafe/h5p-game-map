  {
    "name": "behaviour",
    "type": "group",
    "importance": "low",
    "label": "Behavioural settings",
    "fields": [
      {
        "name": "roaming",
        "type": "select",
        "label": "Roaming",
        "description": "Set whether users can roam all stages freely, need to finish a stage to get access to that stage's neighbors, or need to pass a stage to get access to that stage's neigbors.",
        "options": [
          {
            "value": "free",
            "label": "Roam freely"
          },
          {
            "value": "finish",
            "label": "Finish to unlock"
          },
          {
            "value": "success",
            "label": "Succeed to unlock"
          }
        ],
        "default": "free"
      },
      {
        "name": "fog",
        "type": "boolean",
        "label": "Activate fog",
        "description": "If fog is activated, only direct neighbors of cleared stages will be visible.",
        "optional": true,
        "default": false,
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "roaming",
              "equals": ["finish", "success"]
            }
          ]
        }
      },
      {
        "name": "displayPaths",
        "type": "boolean",
        "label": "Display paths",
        "optional": true,
        "default": true
      }
    ]
  },
