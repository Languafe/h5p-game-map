[
  {
    "name": "showTitleScreen",
    "label": "Show title screen",
    "description": "If checked, the content will show the title screen when starting.",
    "type": "boolean",
    "default": false,
    "optional": true
  },
  {
    "name": "titleScreen",
    "label": "Title screen",
    "type": "group",
    "importance": "low",
    "fields": [
      {
        "name": "titleScreenIntroduction",
        "label": "Introduction",
        "type": "text",
        "widget": "html",
        "placeholder": "Welcome to ...",
        "optional": true,
        "enterMode": "div",
        "tags": [
          "strong",
          "em",
          "u",
          "a",
          "ul",
          "ol",
          "h2",
          "h3",
          "hr",
          "pre",
          "code"
        ],
        "default": "<p style=\"text-align: center;\"></p>"
      },
      {
        "name": "titleScreenMedium",
        "label": "Title screen medium",
        "type": "library",
        "optional": true,
        "options": [
          "H5P.Image 1.1",
          "H5P.Video 1.6"
        ]
      }
    ],
    "widget": "showWhen",
    "showWhen": {
      "rules": [
        {
          "field": "showTitleScreen",
          "equals": true
        }
      ]
    }
  },
  {
    "name": "gamemapSteps",
    "type": "group",
    "label": "Game map editor",
    "importance": "high",
    "widget": "wizard",
    "fields": [
      {
        "name": "backgroundImageSettings",
        "label": "Background image",
        "type": "group",
        "importance": "high",
        "fields": [
          {
            "name": "backgroundImage",
            "type": "image",
            "label": "Background image",
            "importance": "high",
            "description": "Select an image to use as the background of the game map."
          },
          {
            "name": "dummy",
            "type": "boolean",
            "label": "Dummy",
            "widget": "none"
          }
        ]
      },
      {
        "name": "gamemap",
        "label": "Game map",
        "type": "group",
        "importance": "high",
        "widget": "gamemap",
        "fields": [
          {
            "name": "dummy",
            "type": "boolean",
            "widget": "none",
            "optional": true
          },
          {
            "name": "elements",
            "type": "list",
            "label": "Elements",
            "importance": "high",
            "entity": "Element",
            "field": {
              "name": "elements",
              "type": "group",
              "label": "Elements",
              "importance": "high",
              "fields": [
                {
                  "name": "id",
                  "type": "text",
                  "label": "Id",
                  "widget": "none"
                },
                {
                  "name": "type",
                  "type": "text",
                  "label": "Type",
                  "widget": "none"
                },
                {
                  "name": "label",
                  "type": "text",
                  "label": "Stage label",
                  "description": "This label will be displayed when hovering over the stage and will help you to connect different stages with one another.",
                  "importance": "medium"
                },
                {
                  "name": "canBeStartStage",
                  "type": "boolean",
                  "label": "User can start here",
                  "description": "If set to true, this stage will be the stage that the user start as. If no stage or more than one stage can be the start stage, the starting stage will be chosen randomly.",
                  "importance": "medium",
                  "default": false
                },
                {
                  "name": "accessRestrictionMinScore",
                  "type": "number",
                  "label": "Minimum score to access",
                  "description": "The user will not be able to access this stage if he has not received at least this minimum score by completing other stages.",
                  "optional": true
                },
                {
                  "name": "contentType",
                  "type": "library",
                  "label": "Stage content",
                  "description": "Choose the type of content you would like to add.",
                  "importance": "high",
                  "options": [
                    "H5P.Image 1.1",
                    "H5P.AdvancedText 1.1",
                    "H5P.TrueFalse 1.8"
                  ]
                },
                {
                  "name": "neighbors",
                  "type": "select",
                  "label": "Connected stages",
                  "widget": "gamemapdynamiccheckboxes",
                  "importance": "medium",
                  "multiple": true
                },
                {
                  "name": "telemetry",
                  "type": "group",
                  "label": "Telemetry",
                  "importance": "low",
                  "widget": "none",
                  "fields": [
                    {
                      "name": "x",
                      "type": "text"
                    },
                    {
                      "name": "y",
                      "type": "text"
                    },
                    {
                      "name": "height",
                      "type": "text"
                    },
                    {
                      "name": "width",
                      "type": "text"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    ]
  },
  {
    "name": "visual",
    "type": "group",
    "importance": "low",
    "label": "Visual settings",
    "fields": [
      {
        "name": "stages",
        "type": "group",
        "label": "Stages",
        "importance": "low",
        "optional": true,
        "fields": [
          {
            "name": "colorStage",
            "type": "text",
            "label": "Color stage",
            "optional": true,
            "default": "rgba(250, 223, 10, 0.7)",
            "widget": "colorSelector",
            "spectrum": {
              "showInput": true,
              "showInitial": true,
              "showAlpha": true,
              "preferredFormat": "rgb"
            }
          },
          {
            "name": "colorStageLocked",
            "type": "text",
            "label": "Color stage locked",
            "optional": true,
            "default": "rgba(153, 0, 0, 0.7)",
            "widget": "colorSelector",
            "spectrum": {
              "showInput": true,
              "showInitial": true,
              "showAlpha": true,
              "preferredFormat": "rgb"
            }
          },
          {
            "name": "colorStageCleared",
            "type": "text",
            "label": "Color stage cleared",
            "optional": true,
            "default": "rgba(0, 153, 0, 0.7)",
            "widget": "colorSelector",
            "spectrum": {
              "showInput": true,
              "showInitial": true,
              "showAlpha": true,
              "preferredFormat": "rgb"
            }
          }
        ]
      },
      {
        "name": "paths",
        "type": "group",
        "label": "Paths",
        "importance": "low",
        "optional": true,
        "fields": [
          {
            "name": "colorPath",
            "type": "text",
            "label": "Color path",
            "optional": true,
            "default": "rgba(0, 0, 0, 0.7)",
            "widget": "colorSelector",
            "spectrum": {
              "showInput": true,
              "showInitial": true,
              "showAlpha": true,
              "preferredFormat": "rgb"
            }
          },
          {
            "name": "colorPathCleared",
            "type": "text",
            "label": "Color path cleared",
            "optional": true,
            "default": "rgba(0, 153, 0, 0.7)",
            "widget": "colorSelector",
            "spectrum": {
              "showInput": true,
              "showInitial": true,
              "showAlpha": true,
              "preferredFormat": "rgb"
            }
          },
          {
            "name": "pathWidth",
            "type": "select",
            "label": "Path width",
            "importance": "low",
            "default": "0.2",
            "optional": false,
            "options": [
              {
                "value": "0.1",
                "label": "thin"
              },
              {
                "value": "0.2",
                "label": "medium"
              },
              {
                "value": "0.3",
                "label": "thick"
              }
            ]
          },
          {
            "name": "pathStyle",
            "type": "select",
            "label": "Path style",
            "importance": "low",
            "default": "solid",
            "optional": false,
            "options": [
              {
                "value": "solid",
                "label": "Solid"
              },
              {
                "value": "dotted",
                "label": "Dotted"
              },
              {
                "value": "dashed",
                "label": "Dashed"
              },
              {
                "value": "double",
                "label": "Double"
              }
            ]
          }
        ]
      },
      {
        "name": "misc",
        "type": "group",
        "label": "Miscellaneous",
        "collapsed": true,
        "importance": "low",
        "fields": [
          {
            "name": "heightLimitMode",
            "type": "select",
            "label": "Height limit mode",
            "description": "Decide if you want to limit the content height to fit the visible area. Automatic detection may not be perfect depending on your website's setup, e.g. if it has sticky top navigation bars. Good custom values are hard to set manually.",
            "options": [
              {
                "value": "none",
                "label": "No limit"
              },
              {
                "value": "auto",
                "label": "Automatic"
              },
              {
                "value": "custom",
                "label": "Custom"
              }
            ],
            "default": "none"
          },
          {
            "name": "heightLimit",
            "type": "number",
            "label": "Height limit",
            "min": 200,
            "description": "Maximum height of content in pixels.",
            "optional": true,
            "widget": "showWhen",
            "showWhen": {
              "rules": [
                {
                  "field": "heightLimitMode",
                  "equals": "custom"
                }
              ]
            }
          }
        ]
      }
    ]
  },
  {
    "name": "behaviour",
    "type": "group",
    "importance": "low",
    "label": "Behavioural settings",
    "fields": [
      {
        "name": "roaming",
        "type": "select",
        "label": "Roaming",
        "description": "Set whether users can roam all stages freely, need to finish a stage to get access to that stage's neighbors, or need to pass a stage to get access to that stage's neigbors.",
        "options": [
          {
            "value": "free",
            "label": "Roam freely"
          },
          {
            "value": "complete",
            "label": "Complete to clear stage"
          },
          {
            "value": "success",
            "label": "Succeed to clear stage"
          }
        ],
        "default": "free"
      },
      {
        "name": "displayPaths",
        "type": "boolean",
        "label": "Display paths",
        "description": "This setting will not hide the paths in the editor.",
        "optional": true,
        "default": true
      },
      {
        "name": "fog",
        "type": "select",
        "label": "Activate fog",
        "description": "Select how far the user can see ahead",
        "optional": true,
        "options": [
          {
            "value": "all",
            "label": "No fog, see all stages"
          },
          {
            "value": "1",
            "label": "See all unlocked stages and their adjacent neighbors"
          },
          {
            "value": "0",
            "label": "See only unlocked stages"
          }
        ],
        "default": "all",
        "widget": "showWhen",
        "showWhen": {
          "nullWhenHidden": true,
          "rules": [
            {
              "field": "roaming",
              "equals": ["complete", "success"]
            }
          ]
        }
      },
      {
        "name": "startStages",
        "type": "select",
        "label": "Start stages",
        "description": "Decide what stages the user can start at. If no stage is set as start stage, all stages are considered to be potential start stages.",
        "options": [
          {
            "value": "all",
            "label": "All stages that are defined as start stage"
          },
          {
            "value": "random",
            "label": "One stage randomly chosen form start stages"
          }
        ],
        "default": "all",
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "roaming",
              "equals": ["complete", "success"]
            }
          ]
        }
      }
    ]
  },
