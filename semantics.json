            ]
          }
        ]
      },
      {
        "name": "success",
        "label": "User successful",
        "type": "group",
        "importance": "low",
        "fields": [
          {
            "name": "endScreenTextSuccess",
            "label": "Message",
            "type": "text",
            "widget": "html",
            "placeholder": "You did not make it this time ...",
            "optional": true,
            "enterMode": "div",
            "tags": [
              "strong",
              "em",
              "u",
              "a",
              "ul",
              "ol",
              "h2",
              "h3",
              "hr",
              "pre",
              "code"
            ],
            "default": "<p style=\"text-align: center;\"></p>"
          },
          {
            "name": "endScreenMediumSuccess",
            "label": "End screen medium (user successful)",
            "type": "library",
            "optional": true,
            "options": [
              "H5P.Image 1.1",
              "H5P.Video 1.6"
            ]
          }
        ]
      },
      {
        "name": "overallFeedback",
        "type": "group",
        "label": "Overall Feedback",
        "importance": "low",
        "expanded": true,
        "fields": [
          {
            "name": "overallFeedback",
            "type": "list",
            "widgets": [
              {
                "name": "RangeList",
                "label": "Default"
              }
            ],
            "importance": "high",
            "label": "Define custom feedback for any score range",
            "description": "Click the \"Add range\" button to add as many ranges as you need. Example: 0-20% Bad score, 21-91% Average Score, 91-100% Great Score!",
            "entity": "range",
            "min": 1,
            "defaultNum": 1,
            "optional": true,
            "field": {
              "name": "overallFeedback",
              "type": "group",
              "importance": "low",
              "fields": [
                {
                  "name": "from",
                  "type": "number",
                  "label": "Score Range",
                  "min": 0,
                  "max": 100,
                  "default": 0,
                  "unit": "%"
                },
                {
                  "name": "to",
                  "type": "number",
                  "min": 0,
                  "max": 100,
                  "default": 100,
                  "unit": "%"
                },
                {
                  "name": "feedback",
                  "type": "text",
                  "label": "Feedback for defined score range",
                  "importance": "low",
                  "placeholder": "Fill in the feedback",
                  "optional": true
                }
              ]
            }
          }
        ]
      }
    ]
  },
  {
    "name": "visual",
    "type": "group",
    "importance": "low",
    "label": "Visual settings",
    "fields": [
      {
        "name": "stages",
        "type": "group",
        "label": "Stages",
        "importance": "low",
        "optional": true,
        "fields": [
          {
            "name": "colorStage",
            "type": "text",
            "label": "Color stage",
            "optional": true,
            "default": "rgba(250, 223, 10, 0.7)",
            "widget": "colorSelector",
            "spectrum": {
              "showInput": true,
              "showInitial": true,
              "showAlpha": true,
              "preferredFormat": "rgb"
            }
          },
          {
            "name": "colorStageLocked",
            "type": "text",
            "label": "Color stage locked",
            "optional": true,
            "default": "rgba(153, 0, 0, 0.7)",
            "widget": "colorSelector",
            "spectrum": {
              "showInput": true,
              "showInitial": true,
              "showAlpha": true,
              "preferredFormat": "rgb"
            }
          },
          {
            "name": "colorStageCleared",
            "type": "text",
            "label": "Color stage cleared",
            "optional": true,
            "default": "rgba(0, 153, 0, 0.7)",
            "widget": "colorSelector",
            "spectrum": {
              "showInput": true,
              "showInitial": true,
              "showAlpha": true,
              "preferredFormat": "rgb"
            }
          }
        ]
      },
      {
        "name": "paths",
        "type": "group",
        "label": "Paths",
        "importance": "low",
        "optional": true,
        "fields": [
          {
            "name": "colorPath",
            "type": "text",
            "label": "Color path",
            "optional": true,
            "default": "rgba(0, 0, 0, 0.7)",
            "widget": "colorSelector",
            "spectrum": {
              "showInput": true,
              "showInitial": true,
              "showAlpha": true,
              "preferredFormat": "rgb"
            }
          },
          {
            "name": "colorPathCleared",
            "type": "text",
            "label": "Color path cleared",
            "optional": true,
            "default": "rgba(0, 153, 0, 0.7)",
            "widget": "colorSelector",
            "spectrum": {
              "showInput": true,
              "showInitial": true,
              "showAlpha": true,
              "preferredFormat": "rgb"
            }
          },
          {
            "name": "pathWidth",
            "type": "select",
            "label": "Path width",
            "importance": "low",
            "default": "0.2",
            "optional": false,
            "options": [
              {
                "value": "0.1",
                "label": "thin"
              },
              {
                "value": "0.2",
                "label": "medium"
              },
              {
                "value": "0.3",
                "label": "thick"
              }
            ]
          },
          {
            "name": "pathStyle",
            "type": "select",
            "label": "Path style",
            "importance": "low",
            "default": "dotted",
            "optional": false,
            "options": [
              {
                "value": "solid",
                "label": "Solid"
              },
              {
                "value": "dotted",
                "label": "Dotted"
              },
              {
                "value": "dashed",
                "label": "Dashed"
              },
              {
                "value": "double",
                "label": "Double"
              }
            ]
          }
        ]
      },
      {
        "name": "misc",
        "type": "group",
        "label": "Miscellaneous",
        "collapsed": true,
        "importance": "low",
        "fields": [
          {
            "name": "heightLimitMode",
            "type": "select",
            "label": "Height limit mode",
            "description": "Decide if you want to limit the content height to fit the visible area. Automatic detection may not be perfect depending on your website's setup, e.g. if it has sticky top navigation bars. Good custom values are hard to set manually.",
            "options": [
              {
                "value": "none",
                "label": "No limit"
              },
              {
                "value": "auto",
                "label": "Automatic"
              },
              {
                "value": "custom",
                "label": "Custom"
              }
            ],
            "default": "none"
          },
          {
            "name": "heightLimit",
            "type": "number",
            "label": "Height limit",
            "min": 200,
            "description": "Maximum height of content in pixels.",
            "optional": true,
            "widget": "showWhen",
            "showWhen": {
              "rules": [
                {
                  "field": "heightLimitMode",
                  "equals": "custom"
                }
              ]
            }
          }
        ]
      }
    ]
  },
  {
    "name": "behaviour",
    "type": "group",
    "importance": "low",
    "label": "Behavioural settings",
    "fields": [
      {
        "name": "showLabels",
        "type": "boolean",
        "label": "Show stage labels",
        "description": "Set whether a stage's label will be shown on hovering a stage with the mouse/on first touching it.",
        "default": "true"
      },
      {
        "name": "roaming",
        "type": "select",
        "label": "Roaming",
        "description": "Set whether users can roam all stages freely, need to finish a stage to get access to that stage's neighbors, or need to pass a stage to get access to that stage's neigbors.",
        "options": [
          {
            "value": "free",
            "label": "Roam freely"
          },
          {
            "value": "complete",
            "label": "Complete to clear stage"
          },
          {
            "value": "success",
            "label": "Succeed to clear stage"
          }
        ],
        "default": "free"
      },
      {
        "name": "displayPaths",
        "type": "boolean",
        "label": "Display paths",
        "description": "Set whether paths will be displayed on the map. Please note: The paths are always visible in the editor.",
        "optional": true,
        "default": true
      },
      {
        "name": "fog",
        "type": "select",
        "label": "Activate fog",
        "description": "Select how far the user can see ahead",
        "optional": true,
        "options": [
          {
            "value": "all",
            "label": "No fog, see all stages"
          },
          {
            "value": "1",
            "label": "See all unlocked stages and their adjacent neighbors"
          },
          {
            "value": "0",
            "label": "See only unlocked stages"
          }
        ],
        "default": "all",
        "widget": "showWhen",
        "showWhen": {
          "nullWhenHidden": true,
          "rules": [
            {
              "field": "roaming",
              "equals": ["complete", "success"]
            }
          ]
        }
      },
      {
        "name": "startStages",
        "type": "select",
        "label": "Start stages",
        "description": "Decide what stages the user can start at. If no stage is set as start stage, all stages are considered to be potential start stages.",
        "options": [
          {
            "value": "all",
            "label": "All stages that are defined as start stage"
          },
          {
            "value": "random",
            "label": "One stage randomly chosen form start stages"
          }
        ],
        "default": "all",
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "roaming",
              "equals": ["complete", "success"]
            }
          ]
        }
      },
      {
        "name": "finishScore",
        "type": "number",
        "label": "Finish score",
        "description": "Optional score that can be lower than the summed maximum score of all exercises, so users can receive full score without completing all exercises",
        "min": 0,
        "optional": true
      }
    ]
  },
